<% layout("layouts/boilerPlate") %>

<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-8">

      <!-- Listing Card -->
      <div class="card shadow-lg border-0 rounded-4">
        <img src="<%= foundListing.image && foundListing.image.url ? foundListing.image.url : foundListing.image %>"
             class="card-img-top img-fluid rounded-top listing-hero" 
             alt="Image of <%= foundListing.title %>">

        <div class="card-body">
          <h2 class="card-title text-center mb-3 text-primary"><%= foundListing.title %></h2>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">
              <strong>Posted by:</strong> 
              <i><u><span class="text-muted"><%= foundListing.owner ? foundListing.owner.username : 'Unknown' %></span></i></u>
            </li>
            <li class="list-group-item"><strong>Description:</strong> <%= foundListing.description %></li>
            <li class="list-group-item"><strong>Price:</strong> ₹<%= foundListing.price.toLocaleString("en-IN") %></li>
            <li class="list-group-item"><strong>Location:</strong> <%= foundListing.location %></li>
            <li class="list-group-item"><strong>Country:</strong> <%= foundListing.country %></li>
            <li class="list-group-item"><strong>Average Rating:</strong> <%= averageRating.toFixed(1) %> ⭐</li>
          </ul>
        </div>

        <div class="card-footer d-flex justify-content-between align-items-center">
          <a href="/listings" class="btn btn-outline-secondary">&larr; Back</a>
          <% if (currentUser && foundListing.owner && foundListing.owner._id.equals(currentUser._id)) { %>
            <div>
              <a href="/listings/<%= foundListing._id %>/edit" class="btn btn-warning me-2">Edit</a>
              <form action="/listings/<%= foundListing._id %>?_method=DELETE" 
                    method="POST" 
                    style="display:inline;">
                <button type="submit" 
                        onclick="return confirm('Are you sure you want to delete this listing?');" 
                        class="btn btn-danger">
                  Delete
                </button>
              </form>
            </div>
          <% } %>
        </div>
      </div>

      <hr>
      <h4>Where you'll be</h4>
      <div id="map" style="width: 100%; height: 400px;"></div>
      <hr>

      <!-- Review Section -->
      <% if (currentUser) { %>
        <div class="mt-5">
          <legend>Leave a Review</legend>
          <form action="/listings/<%= foundListing._id %>/reviews" 
                method="POST" 
                class="needs-validation mt-3" novalidate>
    <script>
        mapboxgl.accessToken = '<%= process.env.MAP_TOKEN %>';
        const map = new mapboxgl.Map({
            container: 'map', // container ID
            style: 'mapbox://styles/mapbox/streets-v12', // style URL
            center: [<%= foundListing.geometry.coordinates %>], // starting position [lng, lat]
            zoom: 9 // starting zoom
        });

        const marker = new mapboxgl.Marker({color: 'red'})
            .setLngLat([<%= foundListing.geometry.coordinates %>])
            .setPopup(new mapboxgl.Popup({offset: 25}).setHTML("<h5><%= foundListing.location %></h5><p>Exact location will be provided after booking</p>"))
            .addTo(map);
    </script>
    <div class="mb-3">
        <!-- <label for="rating" class="form-label">Rating:</label>
        <input type="range" class="form-range" min="1" max="5" id="rating" name="review[rating]" required> -->

        <fieldset class="starability-growRotate">
            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked aria-label="No rating." />
            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
            <label for="first-rate3" title="Average">3 stars</label>
            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
            <label for="first-rate5" title="Amazing">5 stars</label>
        </fieldset>
    </div>
    <div class="mb-3">
        <label for="comment" class="form-label">Comment:</label>
        <textarea id="comment" name="review[comment]" class="form-control" rows="4" required></textarea>
        <div class="invalid-feedback">Please fill in a comment.</div>
    </div>
    <button type="submit" class="btn btn-success">Submit Review</button>
</form>
</div>
<% } %>

<!-- All Reviews -->
<div class="reviews-section mt-4">
    <h4>All Reviews</h4>
    <% if (foundListing.reviews.length === 0) { %>
        <p class="text-muted">No reviews yet.</p>
    <% } else { %>
        <div class="reviews-grid">
          <% foundListing.reviews.forEach(review => { %>
              <div class="review-card">
                <p>
                  <strong>By:</strong> 
                  <span class="text-muted"><%= review.author ? review.author.username : 'Unknown' %></span>
                </p>
                <p><strong>Rating:</strong> <%= '⭐'.repeat(review.rating) %></p>
                <p><strong>Comment:</strong> <%= review.comment %></p>
                <% if (currentUser && review.author && review.author._id.equals(currentUser._id)) { %>
                  <form action="/listings/<%= foundListing._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST" style="display:inline;">
                    <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this Review?');">
                      <i class="fa-regular fa-trash-can"></i> Delete
                    </button>
                  </form>
                <% } %>
              </div>
          <% }) %>
        </div>
    <% } %>
</div>

