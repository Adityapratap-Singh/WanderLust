<% layout("layouts/boilerPlate") %>

<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-8">

      <!-- Listing Card -->
      <div class="card shadow-lg border-0 rounded-4">
        <img src="<%= foundListing.image %>" 
             class="card-img-top img-fluid rounded-top" 
             alt="Image of <%= foundListing.title %>">

        <div class="card-body">
          <h2 class="card-title text-center mb-3 text-primary"><%= foundListing.title %></h2>
          <ul class="list-group list-group-flush">
            <li class="list-group-item"><strong>Description:</strong> <%= foundListing.description %></li>
            <li class="list-group-item"><strong>Price:</strong> ‚Çπ<%= foundListing.price.toLocaleString("en-IN") %></li>
            <li class="list-group-item"><strong>Location:</strong> <%= foundListing.location %></li>
            <li class="list-group-item"><strong>Country:</strong> <%= foundListing.country %></li>
          </ul>
        </div>

        <div class="card-footer d-flex justify-content-between align-items-center">
          <a href="/listings" class="btn btn-outline-secondary">&larr; Back</a>
          <div>
            <a href="/listings/<%= foundListing._id %>/edit" class="btn btn-warning me-2">Edit</a>
            <form action="/listings/<%= foundListing._id %>?_method=DELETE" 
                  method="POST" 
                  style="display:inline;">
              <button type="submit" 
                      onclick="return confirm('Are you sure you want to delete this listing?');" 
                      class="btn btn-danger">
                Delete
              </button>
            </form>
          </div>
        </div>
      </div>

      <!-- Review Section -->
      <div class="mt-5">
        <h4>Leave a Review</h4>
        <form action="/listings/<%= foundListing._id %>/reviews" 
              method="POST" 
              class="needs-validation mt-3" novalidate>

          <div class="mb-3">
            <label for="rating" class="form-label">Rating:</label>
            <input type="range" class="form-range" min="1" max="5" id="rating" name="review[rating]" required>
          </div>

          <div class="mb-3">
            <label for="comment" class="form-label">Comment:</label>
            <textarea id="comment" name="review[comment]" class="form-control" rows="4" required></textarea>
            <div class="invalid-feedback">Please fill in a comment.</div>
          </div>

          <button type="submit" class="btn btn-success">Submit Review</button>
        </form>
      </div>

<!-- All Reviews -->
<div class="reviews-section mt-4">
    <h4>All Reviews</h4>
    <% if (foundListing.reviews.length === 0) { %>
        <p class="text-muted">No reviews yet.</p>
    <% } else { %>
        <div class="reviews-grid">
        <% foundListing.reviews.forEach(review => { %>
            <div class="review-card">
            <p><strong>Rating:</strong> <%= '‚≠ê'.repeat(review.rating) %></p>
            <p><strong>Comment:</strong> <%= review.comment %></p>
            </div>
            <form action="/listings/<%= foundListing._id %>/reviews/<%= foundListing.reviews._id %>">
                <button class="btn">üóëÔ∏è</button>
            </form>
        <% }) %>
        </div>
    <% } %>
</div>

