<% layout("layouts/boilerPlate") %>
<div class="row">
    <div class="col-8 offset-2">
        <div class="card" style="width: 18rem;">
            <img src="<%= foundListing.image %>" class="card-img-top col-4 offset-1" alt="Image of <%= foundListing.title %>">
            <div class="card-body">
                <p class="card-text">
                    <h1><%= foundListing.title %></h1><br>
                    <ul>
                        <li><%= foundListing.description %></li>
                        <li>Price: &#x20b9;<%= foundListing.price.toLocaleString("en-IN") %></li>
                        <li>Location: <%= foundListing.location %></li>
                        <li>Country: <%= foundListing.country %></li>
                    </ul>
                </p>
            </div>
            <div class="operation1">
                <a href="/listings" class="op" style="display: flex;"> 
                    &lt;--Back
                </a>
                <div class="operation">
                    <a href="/listings/<%= foundListing._id %>/edit" class="op">
                        <button type="button" class="btn btn-primary">Edit Listing</button>
                    </a>
                    <form action="/listings/<%= foundListing._id %>?_method=DELETE" method="POST" class="op">
                        <button type="submit" onclick="return confirm('Are you sure you want to delete this listing?');" class="btn btn-primary">
                            Delete Listing
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
