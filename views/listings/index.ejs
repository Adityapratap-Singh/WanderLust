<% layout("layouts/boilerPlate") %>
  <div class="container py-5">
    <h1 class="text-center mb-5 text-primary fw-bold">All Listings</h1>

    <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 g-4">
      <% for (let listing of allListings) { %>
        <div class="col">
          <a href="/listings/<%= listing._id %>" class="text-decoration-none text-dark">
            <div class="card border-0 shadow-sm rounded-4 h-100 listing-card">
              <img 
                src="<%= listing.image %>" 
                class="card-img-top rounded-top-4" 
                alt="Image of <%= listing.title %>" 
                style="height: 16rem; object-fit: cover;"
              >

              <div class="card-body">
                <h5 class="card-title fw-semibold"><%= listing.title %></h5>
                <p class="card-text text-muted">
                  â‚¹<%= listing.price.toLocaleString("en-IN") %>/night
                </p>
              </div>
            </div>
          </a>
        </div>
      <% } %>
    </div>
  </div>
