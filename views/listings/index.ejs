<% layout("layouts/boilerPlate") %>
<style>
  
</style>
  
<div class="container py-5">
    <div class="form-check form-switch mb-4">
        <input class="form-check-input" type="checkbox" id="tax-toggle">
        <label class="form-check-label" for="tax-toggle">Show Taxes</label>
    </div>
    <div class="row g-4" id="listings-container" data-page="<%= page %>">
        <% for (let listing of allListings) { %>
        <div class="col-lg-4 col-md-6">
            <div class="card listing-card h-100 border-0 shadow-sm">
                <div class="position-relative">
                    <img
                        src="<%= listing.image && listing.image.url ? listing.image.url : '/images/default.jpg' %>"
                        class="card-img-top"
                        alt="Image of <%= listing.title %>"
                        style="height: 200px; object-fit: cover;"
                    >
                    <div class="card-img-overlay d-flex align-items-start justify-content-end p-2">
                        <span class="badge bg-primary"><%= listing.category %></span>
                    </div>
                </div>
                <div class="card-body">
                    <h5 class="card-title fw-bold"><%= listing.title %></h5>
                    <p class="card-text text-muted mb-2">
                        <i class="fas fa-map-marker-alt me-1"></i><%= listing.location %>, <%= listing.country %>
                    </p>
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <div>
                            <span class="h6 text-primary mb-0">â‚¹<%= listing.price.toLocaleString("en-IN") %></span>
                            <small class="text-muted">/ night</small>
                            <span class="tax-info text-muted ms-1" style="display: none;">+18% GST</span>
                        </div>
                        <% if (listing.averageRating > 0) { %>
                            <div class="text-warning">
                                <i class="fas fa-star"></i> <%= listing.averageRating.toFixed(1) %>
                            </div>
                        <% } else { %>
                            <small class="text-muted">No reviews</small>
                        <% } %>
                    </div>
                    <a href="/listings/<%= listing._id %>" class="btn btn-primary btn-sm w-100">View Details</a>
                </div>
            </div>
        </div>
        <% } %>
    </div>

</div>



