<% layout("layouts/boilerPlate") %>

<div class="add-container container py-5">
    <div class="col-lg-8 col-md-10 mx-auto p-4 add-card shadow-lg rounded-4">
        <h2 class="mb-4 text-center fw-bold">Add New Listing</h2>
    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            
            <!-- Title -->
            <div class="mb-3">
                <label for="title" class="form-label fw-semibold">Title</label>
                <input type="text" name="listing[title]" required placeholder="Enter Title" class="form-control">
                <div class="valid-feedback">Title looks good</div>
                <div class="invalid-feedback">Title Missing</div>
            </div>

            <!-- Description -->
            <div class="mb-3">
                <label for="description" class="form-label fw-semibold">Description</label>
                <textarea name="listing[description]" placeholder="Enter Description" class="form-control" rows="3" required></textarea>
                <div class="valid-feedback">Description looks good</div>
                <div class="invalid-feedback">Description Missing</div>
            </div>

            <!-- Image -->
            <div class="mb-3">
                <label for="image" class="form-label fw-semibold required">Image</label>
                <input type="file" name="listing[image]" class="form-control">
            </div>

            <!-- Category -->
            <div class="mb-3">
                <label for="category" class="form-label fw-semibold">Category</label>
                <select name="listing[category]" class="form-control" required>
                    <option value="" disabled selected>Select a category</option>
                    <option value="Apartment">Apartment</option>
                    <option value="House">House</option>
                    <option value="Condo">Condo</option>
                    <option value="Cabin">Cabin</option>
                    <option value="Villa">Villa</option>
                    <option value="Cottage">Cottage</option>
                    <option value="Trending">Trending</option>
                    <option value="Stay">Stay</option>
                    <option value="Camp">Camp</option>
                    <option value="Adventure">Adventure</option>
                    <option value="Waterfront">Waterfront</option>
                    <option value="Nature">Nature</option>
                    <option value="City">City</option>
                    <option value="Beach">Beach</option>
                    <option value="Trekking">Trekking</option>
                    <option value="Bike Tours">Bike Tours</option>
                    <option value="Road Trip">Road Trip</option>
                    <option value="Food">Food</option>
                    <option value="Photography">Photography</option>
                    <option value="Music">Music</option>
                    <option value="Nightlife">Nightlife</option>
                    <option value="Snow">Snow</option>
                    <option value="Sunny">Sunny</option>
                    <option value="Hotels">Hotels</option>
                    <option value="Glamping">Glamping</option>
                    <option value="Home Stay">Home Stay</option>
                    <option value="Pet Friendly">Pet Friendly</option>
                    <option value="Travel">Travel</option>
                    <option value="Top Rated">Top Rated</option>
                </select>
                <div class="invalid-feedback">Please select a category.</div>
            </div>

            <!-- Location -->
            <div class="mb-3">
                <label for="location" class="form-label fw-semibold">Location</label>
                <input type="text" name="listing[location]" required placeholder="Enter Location" class="form-control">
                <div class="valid-feedback">Location Verified</div>
                <div class="invalid-feedback">Location Missing</div>
            </div>

            <!-- Price & Country -->
            <div class="row">
                <div class="col-md-8 mb-3">
                    <label for="price" class="form-label fw-semibold">Price</label>
                    <input type="number" name="listing[price]" required placeholder="Enter Price" class="form-control">
                    <div class="valid-feedback">Valid Price</div>
                    <div class="invalid-feedback">Price Missing</div>
                </div>

                <div class="col-md-4 mb-3">
                    <label for="country" class="form-label fw-semibold">Country</label>
                    <input type="text" name="listing[country]" required placeholder="Enter Country" class="form-control">
                    <div class="valid-feedback">Valid Country</div>
                    <div class="invalid-feedback">Country Missing</div>
                </div>
            </div>

            <!-- Submit -->
            <div class="text-center mt-4">
                <button class="btn add-btn px-4 py-2">Create Listing</button>
            </div>
        </form>
    </div>
</div>
