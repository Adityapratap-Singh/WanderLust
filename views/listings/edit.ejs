<% layout("layouts/boilerPlate") %>

<div class="edit-container container py-5">
    <div class="col-lg-8 col-md-10 mx-auto p-4 edit-card shadow-lg rounded-4">
        <h2 class="mb-4 text-center fw-bold">Edit Listing</h2>
    <form method="POST" action="/listings/<%= foundListing._id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            
            <!-- Title -->
            <div class="mb-3">
                <label for="title" class="form-label fw-semibold">Title</label>
                <input type="text" name="listing[title]" value="<%= foundListing.title %>" placeholder="Enter Title" class="form-control" required> 
                <div class="valid-feedback">Title looks good</div>
                <div class="invalid-feedback">Title Missing</div>
            </div>

            <!-- Description -->
            <div class="mb-3">
                <label for="description" class="form-label fw-semibold">Description</label>
                <textarea name="listing[description]" placeholder="Enter Description" class="form-control" required rows="3"><%= foundListing.description %></textarea>
                <div class="valid-feedback">Description looks good</div>
                <div class="invalid-feedback">Description Missing</div>
            </div>

            <!-- Image -->
            <div class="mb-3">
                <label for="image" class="form-label fw-semibold">Image</label>
                <input type="file" name="listing[image]" class="form-control">
                <img src="<%= originalUrl %>" class="img-fluid mt-2" alt="Listing Image">
            </div>

            <!-- Category -->
            <div class="mb-3">
                <label for="category" class="form-label fw-semibold">Category</label>
                <select name="listing[category]" class="form-control" required>
                    <option value="Apartment" <%= foundListing.category === 'Apartment' ? 'selected' : '' %>>Apartment</option>
                    <option value="House" <%= foundListing.category === 'House' ? 'selected' : '' %>>House</option>
                    <option value="Condo" <%= foundListing.category === 'Condo' ? 'selected' : '' %>>Condo</option>
                    <option value="Cabin" <%= foundListing.category === 'Cabin' ? 'selected' : '' %>>Cabin</option>
                    <option value="Villa" <%= foundListing.category === 'Villa' ? 'selected' : '' %>>Villa</option>
                    <option value="Cottage" <%= foundListing.category === 'Cottage' ? 'selected' : '' %>>Cottage</option>
                    <option value="Trending" <%= foundListing.category === 'Trending' ? 'selected' : '' %>>Trending</option>
                    <option value="Stay" <%= foundListing.category === 'Stay' ? 'selected' : '' %>>Stay</option>
                    <option value="Camp" <%= foundListing.category === 'Camp' ? 'selected' : '' %>>Camp</option>
                    <option value="Adventure" <%= foundListing.category === 'Adventure' ? 'selected' : '' %>>Adventure</option>
                    <option value="Waterfront" <%= foundListing.category === 'Waterfront' ? 'selected' : '' %>>Waterfront</option>
                    <option value="Nature" <%= foundListing.category === 'Nature' ? 'selected' : '' %>>Nature</option>
                    <option value="City" <%= foundListing.category === 'City' ? 'selected' : '' %>>City</option>
                    <option value="Beach" <%= foundListing.category === 'Beach' ? 'selected' : '' %>>Beach</option>
                    <option value="Trekking" <%= foundListing.category === 'Trekking' ? 'selected' : '' %>>Trekking</option>
                    <option value="Bike Tours" <%= foundListing.category === 'Bike Tours' ? 'selected' : '' %>>Bike Tours</option>
                    <option value="Road Trip" <%= foundListing.category === 'Road Trip' ? 'selected' : '' %>>Road Trip</option>
                    <option value="Food" <%= foundListing.category === 'Food' ? 'selected' : '' %>>Food</option>
                    <option value="Photography" <%= foundListing.category === 'Photography' ? 'selected' : '' %>>Photography</option>
                    <option value="Music" <%= foundListing.category === 'Music' ? 'selected' : '' %>>Music</option>
                    <option value="Nightlife" <%= foundListing.category === 'Nightlife' ? 'selected' : '' %>>Nightlife</option>
                    <option value="Snow" <%= foundListing.category === 'Snow' ? 'selected' : '' %>>Snow</option>
                    <option value="Sunny" <%= foundListing.category === 'Sunny' ? 'selected' : '' %>>Sunny</option>
                    <option value="Hotels" <%= foundListing.category === 'Hotels' ? 'selected' : '' %>>Hotels</option>
                    <option value="Glamping" <%= foundListing.category === 'Glamping' ? 'selected' : '' %>>Glamping</option>
                    <option value="Home Stay" <%= foundListing.category === 'Home Stay' ? 'selected' : '' %>>Home Stay</option>
                    <option value="Pet Friendly" <%= foundListing.category === 'Pet Friendly' ? 'selected' : '' %>>Pet Friendly</option>
                    <option value="Travel" <%= foundListing.category === 'Travel' ? 'selected' : '' %>>Travel</option>
                    <option value="Top Rated" <%= foundListing.category === 'Top Rated' ? 'selected' : '' %>>Top Rated</option>
                </select>
                <div class="invalid-feedback">Please select a category.</div>
            </div>

            <!-- Location -->
            <div class="mb-3">
                <label for="location" class="form-label fw-semibold">Location</label>
                <input type="text" name="listing[location]" value="<%= foundListing.location %>" placeholder="Enter Location" required class="form-control">
                <div class="valid-feedback">Location Verified</div>
                <div class="invalid-feedback">Location Missing</div>
            </div>

            <!-- Country & Price -->
            <div class="row">
                <div class="col-md-8 mb-3">
                    <label for="country" class="form-label fw-semibold">Country</label>
                    <input type="text" name="listing[country]" value="<%= foundListing.country %>" placeholder="Enter Country" required class="form-control">
                    <div class="valid-feedback">Valid Country</div>
                    <div class="invalid-feedback">Country Missing</div>
                </div>

                <div class="col-md-4 mb-3">
                    <label for="price" class="form-label fw-semibold">Price</label>
                    <input type="number" name="listing[price]" value="<%= foundListing.price %>" placeholder="Enter Price" required class="form-control">
                    <div class="valid-feedback">Valid Price</div>
                    <div class="invalid-feedback">Price Missing</div>
                </div>
            </div>

            <!-- Submit -->
            <div class="text-center mt-4">
                <button class="btn edit-btn px-4 py-2">Save Changes</button>
            </div>
        </form>
    </div>
</div>
