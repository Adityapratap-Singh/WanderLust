<% layout("layouts/boilerPlate") %>

<div class="container my-5">
    <!-- Hero Section -->
    <div class="row justify-content-center mb-5">
        <div class="col-lg-10">
            <div class="text-center">
                <h1 class="display-4 fw-bold mb-4">Ghoomo Magazine</h1>
                <p class="lead fs-5 text-muted">Stories, guides, and inspiration for the modern traveler</p>
            </div>
        </div>
    </div>

    <!-- Featured Article -->
    <div class="row justify-content-center mb-5">
        <div class="col-lg-10">
            <div class="card border-0 shadow-lg overflow-hidden">
                <div class="row g-0">
                    <div class="col-md-6">
                        <div class="card-body p-5 d-flex flex-column justify-content-center h-100">
                            <div class="mb-3">
                                <span class="badge bg-primary fs-6">Featured</span>
                            </div>
                            <h2 class="card-title fw-bold mb-3">Hidden Gems: Undiscovered Paradise in Southeast Asia</h2>
                            <p class="card-text fs-5 mb-4">Discover breathtaking destinations that few travelers know about. From secret beaches in Vietnam to ancient temples in Cambodia, explore the authentic side of Southeast Asia.</p>
                            <div class="d-flex align-items-center mb-3">
                                <img src="https://via.placeholder.com/40x40" class="rounded-circle me-3" alt="Author">
                                <div>
                                    <p class="mb-0 fw-bold">Sarah Chen</p>
                                    <small class="text-muted">Travel Writer • 5 min read</small>
                                </div>
                            </div>
                            <a href="#" class="btn btn-primary btn-lg">
                                <i class="fa-solid fa-book-open me-2"></i>Read Article
                            </a>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="featured-image h-100" style="background-image: url('https://images.unsplash.com/photo-1559592413-7cec4d0cae2b?w=600&h=400&fit=crop'); min-height: 400px;"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Categories -->
    <div class="row mb-5">
        <div class="col-12">
            <h2 class="text-center mb-4">Explore by Category</h2>
        </div>
    </div>

    <div class="row g-4 mb-5">
        <div class="col-md-6 col-lg-3">
            <div class="card h-100 border-0 shadow-sm text-center hover-card">
                <div class="card-body p-4">
                    <i class="fa-solid fa-utensils text-warning fs-1 mb-3"></i>
                    <h5 class="card-title fw-bold">Food & Drink</h5>
                    <p class="card-text text-muted">Culinary adventures and local flavors</p>
                    <a href="#" class="btn btn-outline-warning">Explore</a>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <div class="card h-100 border-0 shadow-sm text-center hover-card">
                <div class="card-body p-4">
                    <i class="fa-solid fa-camera text-info fs-1 mb-3"></i>
                    <h5 class="card-title fw-bold">Photography</h5>
                    <p class="card-text text-muted">Capture the world's beauty</p>
                    <a href="#" class="btn btn-outline-info">Explore</a>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <div class="card h-100 border-0 shadow-sm text-center hover-card">
                <div class="card-body p-4">
                    <i class="fa-solid fa-hiking text-success fs-1 mb-3"></i>
                    <h5 class="card-title fw-bold">Adventure</h5>
                    <p class="card-text text-muted">Thrilling experiences and outdoor activities</p>
                    <a href="#" class="btn btn-outline-success">Explore</a>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <div class="card h-100 border-0 shadow-sm text-center hover-card">
                <div class="card-body p-4">
                    <i class="fa-solid fa-heart text-danger fs-1 mb-3"></i>
                    <h5 class="card-title fw-bold">Culture</h5>
                    <p class="card-text text-muted">Traditions, festivals, and local insights</p>
                    <a href="#" class="btn btn-outline-danger">Explore</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Latest Articles -->
    <div class="row mb-5">
        <div class="col-12">
            <h2 class="text-center mb-4">Latest Stories</h2>
        </div>
    </div>

    <div class="row g-4 mb-5">
        <div class="col-lg-4">
            <div class="card h-100 border-0 shadow-sm hover-card">
                <div class="card-img-container">
                    <img src="https://images.unsplash.com/photo-1469474968028-56623f02e42e?w=400&h=250&fit=crop" class="card-img-top" alt="Article">
                    <div class="card-img-overlay d-flex align-items-end">
                        <div class="bg-dark bg-opacity-75 text-white p-3 rounded w-100">
                            <h6 class="card-title mb-1">Sustainable Travel: Making a Difference</h6>
                            <small>By Mike Johnson • 3 min read</small>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <p class="card-text">Learn how to travel responsibly and minimize your environmental impact while exploring the world.</p>
                    <a href="#" class="btn btn-primary">Read More</a>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card h-100 border-0 shadow-sm hover-card">
                <div class="card-img-container">
                    <img src="https://images.unsplash.com/photo-1506905925346-21bda4d32df4?w=400&h=250&fit=crop" class="card-img-top" alt="Article">
                    <div class="card-img-overlay d-flex align-items-end">
                        <div class="bg-dark bg-opacity-75 text-white p-3 rounded w-100">
                            <h6 class="card-title mb-1">Solo Travel: Embracing Independence</h6>
                            <small>By Emma Davis • 4 min read</small>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <p class="card-text">Discover the joys and challenges of traveling alone, with tips for staying safe and making connections.</p>
                    <a href="#" class="btn btn-primary">Read More</a>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card h-100 border-0 shadow-sm hover-card">
                <div class="card-img-container">
                    <img src="https://images.unsplash.com/photo-1527631746610-bca00a040d60?w=400&h=250&fit=crop" class="card-img-top" alt="Article">
                    <div class="card-img-overlay d-flex align-items-end">
                        <div class="bg-dark bg-opacity-75 text-white p-3 rounded w-100">
                            <h6 class="card-title mb-1">Budget Travel Hacks for 2024</h6>
                            <small>By Alex Rodriguez • 5 min read</small>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <p class="card-text">Smart strategies to maximize your travel budget without sacrificing the quality of your adventures.</p>
                    <a href="#" class="btn btn-primary">Read More</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Newsletter Signup -->
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-lg border-0 rounded-4 text-center bg-gradient text-white">
                <div class="card-body p-5">
                    <i class="fa-solid fa-newspaper fs-1 mb-3"></i>
                    <h3 class="card-title mb-3">Stay Inspired</h3>
                    <p class="card-text mb-4">Get the latest travel stories, destination guides, and exclusive content delivered to your inbox.</p>
                    <form class="row g-3">
                        <div class="col-12">
                            <input type="email" class="form-control form-control-lg bg-white" placeholder="Enter your email" required>
                        </div>
                        <div class="col-12">
                            <button type="submit" class="btn btn-light btn-lg w-100 text-primary fw-bold">
                                <i class="fa-solid fa-envelope me-2"></i>Subscribe to Magazine
                            </button>
                        </div>
                    </form>
                    <small class="text-white-50 mt-3 d-block">Weekly inspiration, no spam.</small>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.hover-card {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.hover-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 35px rgba(0,0,0,0.1) !important;
}

.card-img-container {
    position: relative;
    overflow: hidden;
}

.card-img-container img {
    transition: transform 0.3s ease;
}

.card-img-container:hover img {
    transform: scale(1.05);
}

.featured-image {
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
}

.bg-gradient {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}
</style>
