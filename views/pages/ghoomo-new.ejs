<% layout("layouts/boilerPlate") %>

<div class="container my-5">
    <!-- Hero Section -->
    <div class="row justify-content-center mb-5">
        <div class="col-lg-10">
            <div class="text-center">
                <h1 class="display-4 fw-bold mb-4">What's New at Ghoomo</h1>
                <p class="lead fs-5 text-muted">Discover the latest features, updates, and exciting developments</p>
            </div>
        </div>
    </div>

    <!-- Latest Updates -->
    <div class="row mb-5">
        <div class="col-12">
            <h2 class="text-center mb-4">Latest Updates</h2>
        </div>
    </div>

    <div class="row g-4 mb-5">
        <div class="col-lg-4">
            <div class="card h-100 border-0 shadow-lg hover-card">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-3">
                        <div class="badge bg-primary fs-6 me-3">NEW</div>
                        <small class="text-muted">December 2024</small>
                    </div>
                    <h5 class="card-title fw-bold mb-3">
                        <i class="fa-solid fa-mobile-screen-button text-primary me-2"></i>
                        Mobile App Launch
                    </h5>
                    <p class="card-text">Experience Ghoomo on the go with our brand new mobile app. Book listings, manage reservations, and discover destinations from your smartphone.</p>
                    <div class="mt-3">
                        <span class="badge bg-light text-primary me-2">iOS</span>
                        <span class="badge bg-light text-success">Android</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card h-100 border-0 shadow-lg hover-card">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-3">
                        <div class="badge bg-success fs-6 me-3">FEATURE</div>
                        <small class="text-muted">November 2024</small>
                    </div>
                    <h5 class="card-title fw-bold mb-3">
                        <i class="fa-solid fa-video text-success me-2"></i>
                        Virtual Tours
                    </h5>
                    <p class="card-text">Explore properties with immersive 360° virtual tours before booking. Get a complete feel for your potential stay from the comfort of your home.</p>
                    <div class="mt-3">
                        <span class="badge bg-light text-success me-2">VR Ready</span>
                        <span class="badge bg-light text-primary">360° Views</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card h-100 border-0 shadow-lg hover-card">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-3">
                        <div class="badge bg-info fs-6 me-3">UPDATE</div>
                        <small class="text-muted">October 2024</small>
                    </div>
                    <h5 class="card-title fw-bold mb-3">
                        <i class="fa-solid fa-shield-alt text-info me-2"></i>
                        Enhanced Security
                    </h5>
                    <p class="card-text">We've upgraded our security measures with advanced encryption and verification processes to ensure safer transactions and bookings.</p>
                    <div class="mt-3">
                        <span class="badge bg-light text-info me-2">SSL Encrypted</span>
                        <span class="badge bg-light text-warning">Verified Hosts</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Upcoming Features -->
    <div class="row justify-content-center mb-5">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0 rounded-4 bg-gradient">
                <div class="card-body p-5 text-center text-white">
                    <i class="fa-solid fa-rocket fs-1 mb-3"></i>
                    <h3 class="card-title mb-3">Coming Soon</h3>
                    <p class="card-text fs-5 mb-4">We're working on exciting new features to enhance your Ghoomo experience</p>
                    <div class="row g-3">
                        <div class="col-md-4">
                            <div class="bg-white bg-opacity-10 rounded-3 p-3">
                                <i class="fa-solid fa-calendar-check text-warning fs-3 mb-2"></i>
                                <h6 class="fw-bold">Smart Booking</h6>
                                <small>AI-powered recommendations</small>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="bg-white bg-opacity-10 rounded-3 p-3">
                                <i class="fa-solid fa-users text-success fs-3 mb-2"></i>
                                <h6 class="fw-bold">Group Travel</h6>
                                <small>Plan trips with friends</small>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="bg-white bg-opacity-10 rounded-3 p-3">
                                <i class="fa-solid fa-gift text-danger fs-3 mb-2"></i>
                                <h6 class="fw-bold">Rewards Program</h6>
                                <small>Earn points on every booking</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Newsletter Signup -->
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-lg border-0 rounded-4 text-center">
                <div class="card-body p-5">
                    <i class="fa-solid fa-envelope-open-text text-primary fs-1 mb-3"></i>
                    <h3 class="card-title mb-3">Stay Updated</h3>
                    <p class="card-text mb-4">Be the first to know about new features, exclusive deals, and travel tips.</p>
                    <form class="row g-3">
                        <div class="col-12">
                            <input type="email" class="form-control form-control-lg" placeholder="Enter your email" required>
                        </div>
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary btn-lg w-100">
                                <i class="fa-solid fa-paper-plane me-2"></i>Subscribe to Updates
                            </button>
                        </div>
                    </form>
                    <small class="text-muted mt-3 d-block">No spam, unsubscribe at any time.</small>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.hover-card {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.hover-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 35px rgba(0,0,0,0.1) !important;
}

.bg-gradient {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}
</style>
