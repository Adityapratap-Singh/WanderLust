<% layout("layouts/boilerPlate") %>

<div class="add-container container py-5">
    <div class="col-lg-6 col-md-10 mx-auto p-4 add-card shadow-lg rounded-4">
        <form action="/login" method="POST" class="needs-validation" novalidate>
            <h1 class="offset-3">Welcome Back</h1>

            <!-- Username -->
            <div class="mb-3">
                <label for="username" class="form-label fw-semibold">Username</label>
                <input 
                    type="text" 
                    name="username" 
                    required 
                    placeholder="Enter your username" 
                    class="form-control" 
                    id="username"
                >
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Username is required</div>
            </div>

            <!-- Password -->
            <div class="mb-3">
                <label for="password" class="form-label fw-semibold">Password</label>
                <input 
                    type="password" 
                    name="password" 
                    required 
                    placeholder="Enter your password" 
                    class="form-control" 
                    id="password"
                >
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Password is required</div>
            </div>

            <button type="submit" class="btn btn-primary w-100 mt-3">Log In</button>
        </form>

        <p class="text-center mt-3">
            Donâ€™t have an account?
            <a href="/signUp" class="text-decoration-none">Sign up here</a>
        </p>
    </div>
</div>
